pipeline {
    agent any
    stages {
        stage('Build Frontend') {
            steps {
                // Construir el frontend
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Build Backend') {
            steps {
                // Construir el backend
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                // Ejecutar pruebas unitarias
                sh 'pytest'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
        stage('Deploy') {
            steps {
                // Desplegar la aplicaci√≥n en un entorno de prueba
                sh 'python deploy.py'
            }
        }
    }
}
